@model IEnumerable<WebLibraryApplication1.Models.User>

@{
    ViewData["Title"] = "Users";
}

<h1>Користувачі</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Створити користувача</a>
    <a asp-action="ExportToExcel" class="btn btn-success">Експорт в Excel</a>
</p>

@using (Html.BeginForm("ImportFromExcel", "Users", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        <label for="file">Оберіть Excel файл:</label>
        <input type="file" name="file" id="file" accept=".xlsx, .xls" class="form-control-file" />
    </div>

    <button type="submit" class="btn btn-primary">Імпорт в Excel</button>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Login)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => user.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => user.Login)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => user.Password)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-danger">Опис</a>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-danger">Редагувати</a>
                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>
