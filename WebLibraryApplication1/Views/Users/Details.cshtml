@model WebLibraryApplication1.Models.User

@{
    ViewData["Title"] = "Details";
}

<h1>Опис</h1>

<hr />
<dl class="row">
    <dt class="col-sm-2">
        Назва
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Name)
    </dd>
    <dt class="col-sm-2">
        Логін
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Login)
    </dd>
    <dt class="col-sm-2">
        Пароль
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Password)
    </dd>
    <dt class="col-sm-2">
        Телефон
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Phone)
    </dd>
</dl>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Редагувати</a> |
    <a asp-action="Index">Повернутись до списку</a>
</div>
