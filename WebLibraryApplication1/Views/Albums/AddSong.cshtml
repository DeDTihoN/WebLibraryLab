@model WebLibraryApplication1.Models.Song

@{
    ViewData["Title"] = "Add Song";
}

<h1>Додавання пісні</h1>

@using (Html.BeginForm())
{
    <div class="form-group">
        <label asp-for="Name">Назва:</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Genre">Жанр:</label>
        <input asp-for="Genre" class="form-control" />
        <span asp-validation-for="Genre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Duration">Тривалість:</label>
        <input asp-for="Duration" class="form-control" />
        <span asp-validation-for="Duration" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="AlbumId" value="@Model.AlbumId" />

    <div class="form-group">
        <input type="submit" value="Add" class="btn btn-primary" />
        <a asp-action="Index">Відмінити</a>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}